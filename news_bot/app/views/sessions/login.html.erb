

<div class="ui divider"></div>
	<div class= "ui relaxed grid">
		<div id= "login" class= "seven wide column">
			<div class="ui form">
			<%= form_tag login_path do %>
			<div class="field">
			  <%= label_tag "Email" %>
			  <%= text_field_tag :email%>
			</div>
			<div class="field">
			  <%= label_tag "Password" %>
			  <%= password_field_tag :password%>
			</div>
			<div class= "ui button">
			  <%= submit_tag "Log In"%>
			</div>
			<% end %>
			</div>
			<p>
			  <%= link_to "Forgot your password?", new_reset_path%>
			</p>
		</div>
	
	
